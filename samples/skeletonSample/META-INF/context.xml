<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Context>
<Context>

	<Resource
		name			=	"jdbc/efw"
		auth			=	"Container"
		type			=	"javax.sql.DataSource"
		driverClassName	=	"org.postgresql.Driver"
		url				=	"jdbc:postgresql://localhost:5432/skeletonSample"
		username		=	"postgres"
		password		=	"postgres"
		maxTotal		=	"10"
		maxIdle			=	"10"
		maxWaitMillis	=	"10"
	/>
	<Resource
		name			=	"mail/efw"
		auth			=	"Container"
		type			=	"javax.mail.Session"
		username		=	"test"
		password		=	"test"
		mail.debug		=	"false"
		mail.user		=	"test"
		mail.from		=	"test@escco.co.jp"
		mail.transport.protocol="smtp"
		mail.smtp.host	=	"mail.escco.co.jp"
		mail.smtp.auth	=	"true"
		mail.smtp.port	=	"25"
		mail.smtp.starttls.enable="true"
		description		=	"E-Mail Resource"
	/>

</Context>